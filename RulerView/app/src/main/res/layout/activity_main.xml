<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.khrystal.widget.RulerView
        app:scaleCount="10"
        app:rulerHeight="50dp"
        app:rulerToResultgap="30dp"
        app:scaleGap="10dp"
        app:minScale="0"
        app:firstScale="40"
        app:maxScale="100"
        app:bgColor="#fcfffc"
        app:smallScaleColor="#aaaaaa"
        app:midScaleColor="#999999"
        app:largeScaleColor="#50b586"
        app:scaleNumColor="#666666"
        app:resultNumColor="#50b586"
        app:unit="kg"
        app:unitColor="#50b586"
        app:smallScaleStroke="2dp"
        app:midScaleStroke="3dp"
        app:largeScaleStroke="5dp"
        app:resultNumTextSize="20sp"
        app:scaleNumTextSize="16sp"
        app:unitTextSize="10sp"
        app:showScaleResult="true"
        app:isBgRoundRect="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <me.khrystal.widget.RulerView
        app:scaleCount="5"
        app:rulerHeight="50dp"
        app:rulerToResultgap="30dp"
        app:scaleGap="10dp"
        app:minScale="150"
        app:firstScale="172"
        app:maxScale="230"
        app:bgColor="#fcfffc"
        app:smallScaleColor="@color/colorPrimary"
        app:midScaleColor="@color/colorPrimaryDark"
        app:largeScaleColor="@color/colorAccent"
        app:scaleNumColor="#666666"
        app:resultNumColor="#50b586"
        app:unit="cm"
        app:unitColor="#50b586"
        app:smallScaleStroke="2dp"
        app:midScaleStroke="3dp"
        app:largeScaleStroke="5dp"
        app:resultNumTextSize="20sp"
        app:scaleNumTextSize="16sp"
        app:unitTextSize="10sp"
        app:showScaleResult="true"
        app:isBgRoundRect="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />


    <me.khrystal.widget.RulerView
        app:scaleCount="5"
        app:rulerHeight="50dp"
        app:rulerToResultgap="30dp"
        app:scaleGap="10dp"
        app:minScale="150"
        app:firstScale="172"
        app:maxScale="230"
        app:bgColor="#fcfffc"
        app:smallScaleColor="#aaaaaa"
        app:midScaleColor="#999999"
        app:largeScaleColor="#50b586"
        app:scaleNumColor="#666666"
        app:resultNumColor="#50b586"
        app:unit="cm"
        app:unitColor="#50b586"
        app:smallScaleStroke="2dp"
        app:midScaleStroke="3dp"
        app:largeScaleStroke="5dp"
        app:resultNumTextSize="20sp"
        app:scaleNumTextSize="16sp"
        app:unitTextSize="10sp"
        app:showScaleResult="false"
        app:isBgRoundRect="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />
</LinearLayout>
