<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp"
  android:background="#D6E3F4">

  <me.khrystal.widget.supertextview.SuperTextView
    android:id="@+id/stv_1"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:textColor="@color/white"
    android:text="下载网络图片"
    android:textSize="16sp"
    android:gravity="center_vertical"
    android:paddingLeft="220dp"
    app:solid="@color/opacity_2_black"
    app:corner="10dp"
    app:isShowState="true"
    app:state_drawable="@drawable/loading_1"
    app:state_drawable_mode="left"
    app:state_drawable_padding_left="16dp"
    app:state_drawable_width="166dp"
    app:state_drawable_height="98.6dp"
    />

  <me.khrystal.widget.supertextview.SuperTextView
    android:id="@+id/stv_2"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_below="@+id/stv_1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    app:corner="100dp"
    app:stroke_color="@color/gray_4c"
    app:stroke_width="2dp"
    app:isShowState2="true"
    app:state_drawable2="@drawable/recousers"
    app:state_drawable2_mode="rightTop"
    app:state_drawable2_height="35dp"
    app:state_drawable2_width="35dp"
    />


</RelativeLayout>
